{
    "name": "mrgear/laravel-persian-normalizer",
    "description": "A Laravel package for Persian text normalization",
    "type": "library",
    "keywords": ["mrgear","laravel","persian", "normalizer" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mahdi Rashidi",
            "email": "mahdirashidi.developer@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "MRGear\\PersianNormalizer\\": "src/"
        }
    },
    "require": {
        "php": ">=8.0",
        "laravel/framework": ">=9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "MRGear\\PersianNormalizer\\PersianNormalizerServiceProvider"
            ],
            "aliases": {
                "PersianNormalizer": "MRGear\\PersianNormalizer\\Facade\\Normalizer"
            }
        }
    }
}
